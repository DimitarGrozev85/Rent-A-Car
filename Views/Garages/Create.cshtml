@model Rent_a_car.Models.Garage

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Garage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Car.CarName" class="control-label"></label>
                <select asp-for="Car.CarName" class ="form-control" asp-items="ViewBag.CarName"></select>
            </div>
            <div class="form-group">
                <label asp-for="StorageTime" class="control-label"></label>
                <input asp-for="StorageTime" class="form-control" />
                <span asp-validation-for="StorageTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryDate" class="control-label"></label>
                <input asp-for="DeliveryDate" class="form-control" />
                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

